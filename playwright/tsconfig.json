{
    "compilerOptions": {
        "composite": true,
    
        "module": "commonjs",
        "target": "ESNext",
        "moduleResolution": "node",
    
        "types": ["node", "playwright"],
    
        "strict": true,
    
        "baseUrl": ".",
        "outDir": "../.playwright-ts-build",

        "resolveJsonModule": true,
        "esModuleInterop": true
    },

    "include": [
        "**/*.ts",
        "data/*.json"
    ]
}
