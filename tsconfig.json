{
    "include": [
        "node_modules/cypress",
        "**/*.ts"
    ],

    "compilerOptions": {
        "target": "es5",
        "lib": ["es5", "dom", "es2021"],
        "types": ["cypress", "node"],
        "noUnusedLocals": true,
        "baseUrl": ".",

        "paths": {
            "@helpers": [
                "cypress/helpers/pages/index"
            ],

            "@data": [
                "cypress/helpers/data/index"
            ],

            "@utils": [
                "cypress/support/utils/utils"
            ]
      }
    }
}
